{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "netlify/functions", // Output .js files alongside .ts files
    "rootDir": "netlify/functions", // Source directory for function .ts files
    "target": "es2020", // Or a Node.js version compatible target
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "declaration": false
  },
  "include": [
    "netlify/functions/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
